<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/found_film_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:textAlignment="center"
        android:textSize="26sp"/>


    <TextView
        android:id="@+id/found_film_year"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/found_film_name"

        android:textSize="20sp"/>
    />

    <TextView
        android:id="@+id/found_film_release_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/found_film_year"

        android:textSize="20sp"/>
    />

    <TextView
        android:id="@+id/found_film_country"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/found_film_release_date"

        android:textSize="20sp"/>
    />

    <TextView
        android:id="@+id/found_film_runtime"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/found_film_country"

        android:textSize="20sp"/>
    />

</RelativeLayout>